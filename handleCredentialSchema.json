{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleCredential",
  "type": "object",
  "properties": {
    "handle": {
      "type": "string"
    },
    "handleType": {
      "type": "string",
      "enum": ["individual", "business", "group"]
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "issuer": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": ["id", "handle", "handleType"]
}

